<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#021d49">

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:textSize="25sp"
        android:text="消息"
        android:paddingLeft="20dp"
        android:layout_marginBottom="30dp"
        />

    <LinearLayout
        android:id="@+id/li_o"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/message_title">

        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/img_friend1"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/friend"/>

        <TextView
            android:id="@+id/message_friend1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_title"
            android:layout_marginTop="20dp"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp"
            android:text="小明"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/li_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/li_o">

        <ImageView
            android:id="@+id/img_friend2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/friend"/>

        <TextView
            android:id="@+id/message_friend2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_title"
            android:layout_marginTop="20dp"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp"
            android:text="小王"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:id="@+id/li_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/li_c">

        <ImageView
            android:id="@+id/img_friend3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/friend"/>

        <TextView
            android:id="@+id/message_friend3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_title"
            android:layout_marginTop="20dp"
            android:paddingLeft="40dp"
            android:paddingBottom="20dp"
            android:text="小刚"
            android:textColor="#FFF"
            android:textSize="20sp" />

    </LinearLayout>


</RelativeLayout>